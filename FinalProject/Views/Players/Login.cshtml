@model FinalProject.Models.Player

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div class="row">
    <div classs="col-md-4">
        <form asp-action="LoginCheck">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label">Login (PlayerId):</label>
                <input asp-for="PlayerId" class="form-control" />
                <span asp-validation-for="PlayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerPassword" class="control-label">Password (PlayerPassword):</label>
                <input asp-for="PlayerPassword" class="form-control" />
                <span asp-validation-for="PlayerPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="登錄" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>