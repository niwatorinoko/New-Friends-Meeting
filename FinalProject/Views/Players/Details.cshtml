@model FinalProject.Models.Player

@{
    ViewData["Title"] = "Details";
    var today = DateTime.Today;
    var age = today.Year - Model.Birthday.Year;
    if (Model.Birthday > today.AddYears(-age)) age--;
}

<h1 class="mb-4">Details</h1>

<div>
    <h4 class="mb-3">Player</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.PlayerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerName)
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Sex)
        </dt>
        <dd class="col-sm-10">
            @(Model.Sex == 1 ? "Male" : "Female")
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Model.Birthday.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2 fw-bold">
            Age
        </dt>
        <dd class="col-sm-10">
            @age
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2 fw-bold">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Images/@(Html.DisplayFor(model => model.Photo)).png" alt="Player Photo" class="img-thumbnail" style="width: 100px; height: 100px;" />
        </dd>
    </dl>
</div>
<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<!-- カスタムCSS（必要に応じて追加してください） -->
<style>
    .fw-bold {
        font-weight: bold;
    }

    .me-2 {
        margin-right: 0.5rem;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    .img-thumbnail {
        object-fit: cover;
    }
</style>
