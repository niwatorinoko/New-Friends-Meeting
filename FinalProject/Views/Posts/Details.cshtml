@model FinalProject.Models.Post

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Post Details</h1>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@Html.DisplayFor(model => model.Title)</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Player ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PlayerId)</dd>
            <dt class="col-sm-3">Content</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>
            <dt class="col-sm-3">Place</dt>
            <dd class="col-sm-9">
                <a href="https://www.google.com/maps/search/?api=1&query=@Html.DisplayFor(model => model.Place)" target="_blank">
                    @Html.DisplayFor(model => model.Place)
                </a>
            </dd>
            <dt class="col-sm-3">Meeting Date and Time</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MeetingDateTime)</dd>
        </dl>
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.PostId" class="btn btn-warning me-2">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model?.PostId" class="btn btn-danger me-2">Delete</a>
        </div>
    </div>
</div>

<!-- カスタムCSS -->
<style>
    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .card-title {
        font-weight: bold;
    }

    .btn {
        margin-right: 0.5rem;
    }

    a {
        text-decoration: none;
        color: #007bff;
    }

        a:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    dt {
        font-weight: bold;
    }
</style>
